class lesser_poison_basilisk : warrior_aggressive
{
handler:
    EventHandler MY_DYING(c1, i0)
    {
        c1 = GetLastAttacker();
        if (HaveMemo(c1, @sense_for_business))
        {
            i0 = Rand(100);
            if (i0 < 53)
            {
                GiveItem1(c1, @basilisk_gizzard, 1);
                SoundEffect(c1, "ItemSound.quest_itemget");
            }
        }

        super;
    }
}
